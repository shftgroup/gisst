location {{ collector_query_base_path }}/ {
  proxy_http_version 1.1;
  proxy_set_header X-Forwarded-For $remote_addr;
  proxy_set_header Upgrade $http_upgrade;
  proxy_set_header Connection $connection_upgrade;
  proxy_set_header Host $host;
  proxy_pass_request_headers on;
  proxy_pass http://{{ collector_query_http_bind_addr }}:{{ collector_query_http_bind_port }};
}

location {{ collector_proxy_metrics_http_path }}/ {
  proxy_http_version 1.1;
  proxy_set_header X-Forwarded-For $remote_addr;
  proxy_set_header Upgrade $http_upgrade;
  proxy_set_header Connection $connection_upgrade;
  proxy_set_header Host $host;
  proxy_pass_request_headers on;
  proxy_pass http://{{ collector_metrics_bind_addr }}:{{ collector_metrics_bind_port }};
  rewrite  ^/{{ collector_proxy_metrics_http_path }}/(.*)/$1 break;
}

