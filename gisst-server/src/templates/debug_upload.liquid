<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>test upload</title>
</head>
<body>
<form action="/{{ model.name }}" method="post" enctype="multipart/form-data">
    {% for field in model.fields %}
        {% if field.field_type == 'file' %}
            <label for="{{ field.name }}"> Choose a file to upload: </label>
            <input type="file" id="{{ field.name }}" name="{{ field.name }}">
        {% elif field.field_type == 'bool' %}
            <input type="checkbox" id="{{ field.name }}" name="{{ field.name }}">
            <label for="{{ field.name }}">{{ field.name }}</label>
        {%  else %}
            {{ field.name | capitalize }}: <input type="{{ field.field_type }}" name="{{ field.name }}">
        {% endif %}
        <br>
    {% endfor %}
    {% if model.name == 'object' or model.name == 'image' %}
        <label for="{{ model.name }}"> Choose a file to upload: </label>
        <input type="file" id="{{ model.name }}" name="{{ model.name }}">
    {% endif %}

    <button type="submit">Submit</button>
</form>
</body>
</html>
